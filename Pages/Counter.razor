@page "/counter"

@if (Status == ShopStatusM.Success)
{
    <MudBadge Color="Color.Success" Overlap="true" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}else if (Status == ShopStatusM.Error)
{
    <MudBadge Color="Color.Error" Icon="@Icons.Material.Filled.Remove" Overlap="true" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}
else
{
    <MudBadge Color="Color.Warning" Icon="@Icons.Material.Filled.Looks" Overlap="true" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}  

@code {

    [Parameter]
    public ShopStatusM Status {get; set;}

    [Parameter]
    public string? Image { get; set; }

    protected override void OnParametersSet()
    {


        try{
            
        }
        catch
        {
            
        }



        base.OnParametersSet();
    }

}
