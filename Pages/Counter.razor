@page "/counter"

@inject NavigationManager _nav

@if (Status == ShopStatusM.Success)
{
    <MudBadge Color="Color.Success" Overlap="true" Bordered="true" OnClick="OnOpen">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}else if (Status == ShopStatusM.Error)
{
    <MudBadge Color="Color.Error" Icon="@Icons.Material.Filled.Remove" OnClick="OnOpen" Overlap="true" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}
else if(Status == ShopStatusM.Warning)
{
    <MudBadge Color="Color.Warning" Icon="@Icons.Material.Filled.Looks" OnClick="OnOpen" Overlap="true" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
} 
else{
     <MudBadge Color="Color.Warning" Icon="@Icons.Material.Filled.Looks" OnClick="OnOpen" Overlap="true" Visible="false" Bordered="true">
        <MudAvatar Image="@Image" Size="Size.Medium" />
    </MudBadge>
}

@code {

    [Parameter]
    public ShopStatusM Status {get; set;}

    [Parameter]
    public string? Image { get; set; }

